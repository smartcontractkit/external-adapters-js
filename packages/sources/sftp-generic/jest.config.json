{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["**/test/**/*.test.ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/index.ts"
  ],
  "coverageReporters": ["text", "lcov", "html"],
  "coverageDirectory": "coverage",
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "moduleDirectories": ["node_modules", "src"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testTimeout": 30000
}
