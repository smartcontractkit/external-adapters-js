{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "../../node_modules/@types",
      "../../typings",
      "./typings"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
