{
  "name": "@chainlink/external-adapters-js",
  "version": "0.2.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "new": "ts-node ./packages/scripts/src/new.ts",
    "bundle": "ncc build",
    "clean": "tsc -b --clean  ./packages/tsconfig.json",
    "lint": "eslint --ext ts .",
    "lint:fix": "yarn lint --fix",
    "setup": "tsc -b ./packages/tsconfig.json ",
    "test": "jest",
    "generate:docker-compose": "ts-node ./packages/scripts/src/docker-build",
    "generate:oas": "ts-node ./packages/scripts/dist/docgen.js",
    "generate:oas:all": "yarn generate:oas --all",
    "generate:gha:matrix": "ts-node ./packages/scripts/src/gha"
  },
  "dependencies": {
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^26.6.3"
  },
  "devDependencies": {
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/eslint": "^7",
    "@types/node": "^14.14.35",
    "@types/semantic-release": "^17",
    "prettier": "^2.0.5",
    "semantic-release": "^17.4.2",
    "semantic-release-monorepo": "^7.0.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "endOfLine": "auto",
    "trailingComma": "all"
  },
  "release": {
    "branches": [
      "master",
      "develop"
    ],
    "extends": "semantic-release-monorepo"
  }
}
