{
  "name": "@chainlink/external-adapters-js",
  "version": "0.2.0-rc.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/core/*",
    "packages/examples/*",
    "packages/sources/*",
    "packages/sources/helpers/*",
    "packages/composites/*",
    "packages/2-step/*"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach -pv run clean",
    "lint": "yarn workspaces foreach -pv run lint",
    "lint:fix": "yarn workspaces foreach -pv run lint:fix",
    "setup": "yarn workspaces foreach -ptv run setup",
    "test": "yarn workspaces foreach -pv run test",
    "test:unit": "yarn workspaces foreach -pv run test:unit",
    "test:integration": "yarn workspaces foreach -pv run test:integration",
    "test:example": "yarn workspace @chainlink/example-source-adapter test",
    "test:example-start-server": "node ./helpers/server.js"
  },
  "dependencies": {
    "decimal.js": "^10.2.0",
    "ethers": "^5.0.26",
    "express": "^4.17.0",
    "web3": "^1.2.11"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "prettier": "^2.0.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "endOfLine": "auto",
    "trailingComma": "all"
  }
}
