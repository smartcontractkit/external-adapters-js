{
  "name": "@chainlink/external-adapters-js",
  "version": "0.2.0-rc.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/core/*",
    "packages/examples/*",
    "packages/sources/*",
    "packages/sources/helpers/*",
    "packages/composites/*",
    "packages/2-step/*"
  ],
  "scripts": {
    "clean": "yarn workspaces run clean",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "setup": "yarn workspaces foreach -pt run setup",
    "test": "yarn workspaces run test",
    "test:unit": "yarn workspaces run test:unit",
    "test:integration": "yarn workspaces run test:integration",
    "test:example": "yarn workspace @chainlink/example-adapter test",
    "test:example-start-server": "node ./helpers/server.js"
  },
  "dependencies": {
    "decimal.js": "^10.2.0",
    "ethers": "^5.0.26",
    "express": "^4.17.0",
    "web3": "^1.2.11"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
