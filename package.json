{
  "name": "@chainlink/external-adapters-js",
  "version": "0.2.0-rc.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/core/*",
    "packages/examples/*",
    "packages/sources/*",
    "packages/sources/helpers/*",
    "packages/targets/*",
    "packages/composites/*",
    "packages/2-step/*"
  ],
  "scripts": {
    "new": "ts-node ./scripts/new.ts",
    "docker": "ts-node ./scripts/docker.ts",
    "clean": "yarn workspaces foreach -pv run clean",
    "lint": "yarn workspaces foreach -pv run lint",
    "lint:fix": "yarn workspaces foreach -pv run lint:fix",
    "setup": "yarn workspaces foreach -ptv run setup",
    "test": "yarn workspaces foreach -pv run test",
    "test:unit": "yarn workspaces foreach -pv run test:unit",
    "test:integration": "yarn workspaces foreach -pv run test:integration"
  },
  "dependencies": {
    "decimal.js": "^10.2.0",
    "ethers": "^5.0.26",
    "express": "^4.17.0",
    "web3": "^1.2.11"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/node": "^14.14.35",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "prettier": "^2.0.5",
    "shelljs": "^0.8.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "endOfLine": "auto",
    "trailingComma": "all"
  }
}
